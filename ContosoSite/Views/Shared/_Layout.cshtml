<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – приложение ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <header>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ОРГАНИЗАЦИЯ ВЫСТАВОЧНЫХ МЕРОПРИЯТИЙ", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

    <li>
        @Html.ActionLink("Выставки", "Index", "Exhibitions")
    </li>

    <li>
        @Html.ActionLink("Картины", "Index", "Pictures")
    </li>
    
    <li>
        @Html.ActionLink("Художники", "Index", "Artists")
    </li>
@if (User.Identity.IsAuthenticated)
{
    if ((string)TempData.Peek("Role") == "admin")
    {
    <li>
        @Html.ActionLink("Учетные записи", "Index", "Accounts")
    </li>

    <li>
        @Html.ActionLink("Статус", "Index", "Status")
    </li>
    }
    }


</ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
        </header>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year – приложение ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
