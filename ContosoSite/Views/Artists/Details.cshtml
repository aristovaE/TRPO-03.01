@model ContosoSite.Models.Artist

@{
    ViewBag.Title = "Подробнее";
}

<h2>Подробнее</h2>

<div>
    <h4>Художник</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
           Имя
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SecondName)
        </dt>

        <dd>
           Фамилия
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>

        <dd>
           Номер телефона
        </dd>

    </dl>
</div>
<p>
    @if (User.Identity.IsAuthenticated)
    {
        if ((string)TempData.Peek("Role") == "admin" || ((string)TempData.Peek("Login") == Model.SecondName))
        {
            @Html.ActionLink("Редактировать", "Edit", new { id = Model.Id_artist })
        }
    }
    @Html.ActionLink("Назад", "Index")
</p>
